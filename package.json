{
  "name": "@govtechsg/ethers-contract-hook",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "build/index.js",
  "module": "build/esm/index.js",
  "types": "build/esm/index.d.ts",
  "dependencies": {
    "debug": "^4.1.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "ethers": "^5.0.5"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --mode production && tsc --module es6 --declaration --outDir build/esm",
    "example": "webpack-dev-server --config ./example/webpack.config.js",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o docs",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "semantic-release": "semantic-release",
    "ganache": "ganache-cli"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "7.2.0",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "^7.9.0",
    "@storybook/addon-actions": "5.2.1",
    "@storybook/addon-docs": "5.2.1",
    "@storybook/addons": "5.2.1",
    "@storybook/react": "5.2.1",
    "@testing-library/react": "9.1.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/debug": "4.1.5",
    "@types/jest": "24.0.18",
    "@types/react": "16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "ethers": "^5.0.5",
    "jest": "24.9.0",
    "prettier": "^2.0.2",
    "react": "^16.9.0",
    "react-component-component": "1.2.1",
    "react-docgen-typescript-loader": "3.2.0",
    "react-dom": "16.9.0",
    "react-frame-component": "^4.1.1",
    "react-test-renderer": "^16.13.1",
    "semantic-release": "^15.14.0",
    "typescript": "^3.8.3",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0"
  },
  "license": "GPL-3.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "jest/prefer-expect-assertions": "off",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build"
    ],
    "coverageDirectory": "coverage"
  },
  "prettier": {
    "printWidth": 120,
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "parser": "babel-ts"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Attestation/ethers-contract-hooks.git"
  }
}
